@model GanaderiaLasDelicias.Models.Severance

@{
    ViewData["Title"] = "Cálculo de Cesantía";
}

<h2>Cálculo de Cesantía</h2>

<form method="post" asp-action="Index">
    <div class="form-group">
        <label for="employeeId">Empleado</label>
        <select id="employeeId" name="employeeId" class="form-control">
            <option value="">Seleccione un empleado</option>
            @foreach (var employee in ViewBag.Employees)
            {
                <option value="@employee.EmployeeId">@employee.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="workingYears">Años Trabajados</label>
        <input type="number" class="form-control" id="workingYears" name="workingYears" min="0" step="1" />
    </div>
    <div class="form-group">
        <label for="salary">Salario Promedio Diario</label>
        <input type="number" class="form-control" id="salary" name="salary" min="0" step="0.01" />
    </div>
    <button type="submit" class="btn btn-primary">Calcular Cesantía</button>
</form>

@if (Model != null && Model.Compensation > 0)
{
    <h3>Cesantía Calculada</h3>
    <p>Cantidad de Cesantía: @Model.Compensation.ToString("C")</p>
}
