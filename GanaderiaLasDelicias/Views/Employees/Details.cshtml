@model GanaderiaLasDelicias.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Detalles del Empleado</h3>
        </div>
        <div ="card-body">

            <hr />
            <dl class="row" style="margin-left: 1%;">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NatId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NatId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JobTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BaseSalary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BaseSalary)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduleId)
        </dt>
                <dd class="col-sm-10">
                    @if (Model.ScheduleId == 1)
                    {
                        <span>Diurno</span>
                    }
                    else if (Model.ScheduleId == 2)
                    {
                        <span>Nocturno</span>
                    }
                    else
                    {
                        <span>Desconocido</span>
                    }
                </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AspNetUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AspNetUser.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
        </div>
    </div>
    <div>
    <a asp-action="Edit" asp-route-id="@Model.EmployeeId">Editar</a> |
    <a asp-action="Index">Regresar</a>
</div>
