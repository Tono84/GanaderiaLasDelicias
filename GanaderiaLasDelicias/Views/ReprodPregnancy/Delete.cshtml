@model GanaderiaLasDelicias.Models.ReprodPregnancy

@{
    ViewData["Title"] = "Eliminar Embarazo";
}

<h2>Eliminar Embarazo</h2>

<h3>¿Estás seguro que deseas eliminar este embarazo?</h3>
<div>
    <h4>ReprodPregnancy</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Vaca</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Cow.Name)</dd>
        <dt class="col-sm-2">Fecha de Inicio</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.StartDate)</dd>
        <dt class="col-sm-2">Fecha de Fin</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EndDate)</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ReprodPregnancyId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Volver al Listado</a>
    </form>
</div>
