@model GanaderiaLasDelicias.Models.Insemination

@{
    ViewData["Title"] = "Detalles de la Inseminación";
}

<h2>Detalles de la Inseminación</h2>

<div>
    <h4>Insemination</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Vaca</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Cow.Name)</dd>
        <dt class="col-sm-2">Toro</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Bull.Name)</dd>
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>
    </dl>
</div>
<div>
    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.InseminationId">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">Volver al Listado</a>
</div>
