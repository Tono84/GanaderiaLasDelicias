@model GanaderiaLasDelicias.Models.EmployeePayment

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>EmployeePayment</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="VacationsUsed" class="control-label">Vacaciones Usadas:</label>
                <input asp-for="VacationsUsed" class="form-control" />
                <span asp-validation-for="VacationsUsed" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NetPay" class="control-label">Pago Neto:</label>
                <input asp-for="NetPay" class="form-control" />
                <span asp-validation-for="NetPay" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Empleado:</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeNames"></select>
            </div>

            <div class="form-group">
                <label asp-for="PaymentId" class="control-label">Pago:</label>
                <select asp-for="PaymentId" class="form-control" asp-items="ViewBag.PaymentId"></select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>
